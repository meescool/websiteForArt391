<%- include('partials/header') %>

<h2 class="internship"> <%- titleName %> </h2>

<div class="content">


<div class="summary">
  <div class="section">
    <% if (theme == 'day') { %>
      <img src="/img/icons/d_location.svg" alt="">
    <% } else { %>
      <img src="/img/icons/n_location.svg" alt="">
    <% } %>
    <p>Location:</p>
    <p> <%- location %> </p>
  </div>
  <div class="section">
    <% if (theme == 'day') { %>
      <img src="/img/icons/d_time.svg" alt="">
    <% } else { %>
      <img src="/img/icons/n_time.svg" alt="">
    <% } %>
    <p>Length:</p>
    <p>  <%- length %> </p>
  </div>
  <div class="section">
    <% if (theme == 'day') { %>
      <img src="/img/icons/d_money.svg" alt="">
    <% } else { %>
      <img src="/img/icons/n_money.svg" alt="">
    <% } %>
    <p>Paid:</p>
    <p>  <%- paid %> </p>
  </div>
  <p><%- desc %></p>
</div>

<div class="gallery">
  <% projects.forEach(function(e){ %>
    <div class="section">
      <div class="card">
        <h3> <%- e.name %> </h3>
        <p> <%- e.desc%> </p>
        <button id= "<%- e.id %>" onclick="showOverlay('<%- e.img %>')" type="button" name="galleryButtons" >
          <% if(e.img.length == 1) { %>
            See Design
          <% } else {  %>
            See Designs
          <% } %>
        </button>
      </div>
      <div class="card img" style="background-image:url('img/<%- e.img[0][0]%>')">
      </div>
    </div>
  <% }); %>
</div>

<div id="overlayContainer" class="overlay">
  <button class='close' type="button" name="button" onclick="closeOverlay()">
    <div class="x">

    </div>
    <div class="x">

    </div>
  </button>

    <div id="imagesContainer"class="images">


    </div>

</div>

</div>


<%- include('partials/footer') %>
